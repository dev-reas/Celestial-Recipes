rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // match /{document=**} {
    //   allow read, write: if
    //       request.time < timestamp.date(2021, 2, 8);
    // }
    
    match /recipe/{recipeId} {
    	allow read: if true
      allow create: if request.auth.uid != null;
      
      match /users/{userId} {
        allow update, delete: 
        	if request.auth != null && request.auth.uid == resource.data.author;
      }
    }
  }
}